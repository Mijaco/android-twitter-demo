<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.davidchura.tiendavirtual">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EscritorioActivity"
            android:label="@string/title_activity_escritorio"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".InformacionActivity" />
        <activity android:name=".AcercadeActivity" />
        <activity android:name=".TerminosActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CrearCuentaActivity"
            android:label="@string/crear_cuenta" /> <!-- label es el texto de la barra de titulo -->
        <activity
            android:name=".IniciarSesionActivity"
            android:label="@string/iniciar_sesion" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>